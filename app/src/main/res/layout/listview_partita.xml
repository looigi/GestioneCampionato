<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bordo_arrotondato_bianco"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/txtTipologia"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:text="ppp"
            android:shadowRadius="1.5"
            android:textColor="@color/bianco" />

        <Button
            android:id="@+id/btnEliminaPartita"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="X"
            android:layout_marginTop="-7dp"
            android:layout_height="35dp">

        </Button>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txtTipologia"
        android:orientation="horizontal"
        android:background="@drawable/bordo_arrotondato_giallo"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dataoracampo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#777700"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ppp Ooo"
            android:layout_marginRight="3dp"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- <TextView
            android:id="@+id/campo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_horizontal"
            android:text="Ppp Ooo"
            android:textSize="12sp"
            android:textStyle="bold|italic" /> -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:baselineAligned="false"
        android:layout_below="@+id/txtTipologia"
        android:orientation="horizontal"
        android:weightSum="15">

        <TextView
            android:id="@+id/idPartita"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <!-- android:background="@drawable/bordo_arrotondato_bianco_sfumato" -->

                <!-- <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">
                    card_view:cardBackgroundColor="@android:color/white"> -->


                <TextView
                    android:id="@+id/sqCasa"
                    android:textColor="#008888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Ppp Ooo"
                    android:shadowColor="#000000"
                    android:shadowDy="2"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:shadowRadius="1.5"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- </android.support.v7.widget.CardView> -->
            </LinearLayout>

            <!-- <View
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCasa"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="2dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="7"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtGoals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#008888"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Goals"
                        android:shadowColor="#000000"
                        android:shadowDy="2"
                        android:shadowRadius="1.5"
                        android:textSize="17sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/risultatoGoal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Ppp Ooo"
                        android:textColor="@color/blu"
                        android:shadowColor="#000000"
                        android:shadowDy="2"
                        android:shadowRadius="1.5"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTempi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#008888"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Tempi"
                        android:shadowColor="#000000"
                        android:shadowDy="2"
                        android:shadowRadius="1.5"
                        android:textSize="17sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/risultatoTempi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Ppp Ooo"
                        android:textColor="@color/blu"
                        android:shadowColor="#000000"
                        android:shadowDy="2"
                        android:shadowRadius="1.5"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_height="match_parent">

                        <!-- <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:padding="1dp"
                            card_view:cardBackgroundColor="@android:color/white"> -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgAllenatore"
                                android:layout_width="match_parent"
                                android:layout_height="45dp" />

                        </LinearLayout>
                        <!-- </android.support.v7.widget.CardView>

                        <TextView
                            android:id="@+id/allenatore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="Ppp Ooo"
                            android:textSize="10sp"
                            android:textStyle="bold|italic" /> -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="2dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgMultimedia"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                card_view:srcCompat="@drawable/multimedia" />

                            <TextView
                                android:id="@+id/txtQuantiMultimedia"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="-40dp"
                                android:layout_height="wrap_content"
                                android:shadowColor="@color/nero"
                                android:text="3"
                                android:textColor="@color/rosso"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgMaps"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                card_view:srcCompat="@drawable/maps" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgArbitro"
                                android:layout_width="match_parent"
                                android:layout_height="45dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="4"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <!-- android:background="@drawable/bordo_arrotondato_bianco_sfumato" -->

                <!-- <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordo_arrotondato_giallo"
                    android:layout_margin="3dp"
                    android:padding="2dp"
                    card_view:cardBackgroundColor="@android:color/white"> -->

                <!-- </android.support.v7.widget.CardView> -->

                <TextView
                    android:id="@+id/sqFuori"
                    android:layout_width="match_parent"
                    android:textColor="#008888"
                    android:layout_height="wrap_content"
                    android:text="Ppp Ooo"
                    android:gravity="center_vertical|end"
                    android:shadowColor="#000000"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- <View
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFuori"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layRigori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- android:background="@drawable/bordo_arrotondato_bianco_sfumato" -->

        <TextView
            android:id="@+id/txtRigori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/bianco"
            android:text="3"
            android:background="@drawable/sfondo_bianco"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/rosso"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>