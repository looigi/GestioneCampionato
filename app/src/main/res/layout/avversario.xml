<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bordo_arrotondato_bianchissimo"
    android:padding="3dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Avversari"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="Squadra" />

            <EditText
                android:id="@+id/edtRicAvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <ImageView
                android:id="@+id/imgRicercaAvversario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_search_category_default" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnAvversario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- <Button
                android:id="@+id/cmdAnnullaAvversario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Annulla" />

            <Button
                android:id="@+id/cmdOkAvversario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ok" /> -->

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/bordo_arrotondato_bianco"
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cmdAnnullaAvversario"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/annulla" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/bordo_arrotondato_bianco"
                android:padding="2dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cmdOkAvversario"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ok" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>