                                android:textSize="15sp"
                                android:layout_weight="2"  />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="center_vertical|left"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/chkInCasa"
                                    android:layout_width="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="In Casa" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/chkEsterno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="Campo esterno" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layCampoIndirizzo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="5dp"
                            android:weightSum="7"
                            android:gravity="center_vertical|left"
                            android:layout_marginEnd="5dp"
                            android:background="@color/bianco">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_weight="2"
                                android:gravity="start|center_vertical"
                                android:text="Indirizzo"
                                android:textColor="@color/verdeScuro"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtCampoIndirizzo"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|left"
                                android:gravity="center_vertical|left"
                                android:text="" />

                            <!-- <Button
                                android:id="@+id/btnCoordinate"
