                            <ImageView
                                android:id="@+id/imgFuori"
                                android:layout_width="80dp"
                                android:layout_height="80dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/Pagina1"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bordo_arrotondato_bianco"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/imgPagina1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:srcCompat="@drawable/tab_generale" />

                        <TextView
                            android:id="@+id/txtPagina1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text="Generale" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Pagina2"
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:background="@drawable/bordo_arrotondato_bianco"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/imgPagina2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:srcCompat="@drawable/giocate" />

                        <TextView
                            android:id="@+id/txtPagina2"
                            android:layout_marginStart="3dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primo Tempo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Pagina3"
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:background="@drawable/bordo_arrotondato_bianco"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/imgPagina3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:srcCompat="@drawable/partite" />

                        <TextView
                            android:id="@+id/txtPagina3"
                            android:layout_marginStart="3dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secondo Tempo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Pagina4"
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:background="@drawable/bordo_arrotondato_bianco"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/imgPagina4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/nuova_partita" />

                        <TextView
                            android:id="@+id/txtPagina4"
                            android:layout_marginStart="3dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terzo Tempo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Pagina5"
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:background="@drawable/bordo_arrotondato_bianco"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/imgPagina5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/fischietto" />

                        <TextView
                            android:id="@+id/txtPagina5"
                            android:layout_marginStart="3dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rigori" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
