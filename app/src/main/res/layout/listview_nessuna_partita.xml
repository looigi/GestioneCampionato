<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/nero"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <LinearLayout
        android:background="@drawable/bordo_arrotondato_bianco"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginStart="3dp"
            android:background="@drawable/annulla"
            android:backgroundTint="@color/rosso"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ImageView>

        <TextView
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/blu"
            android:textSize="22sp"
            android:text="@string/no_partite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView
            android:layout_marginEnd="3dp"
            android:backgroundTint="@color/rosso"
            android:background="@drawable/annulla"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ImageView>
    </LinearLayout>

</RelativeLayout>