<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/contPartita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTipologia"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="@color/bianco" />

            <ImageView
                android:id="@+id/imgElimina"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:srcCompat="@drawable/elimina_quadrato" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="15"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="4"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idPartita"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    card_view:cardBackgroundColor="@android:color/white">

                    <ImageView
                        android:id="@+id/imgCasa"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/sqCasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ppp Ooo"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="7"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dataora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ppp Ooo"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/campo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ppp Ooo"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Goals"
                            android:textSize="14sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/risultatoGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Ppp Ooo"
                            android:textColor="@color/blu"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Ris. Tempi"
                            android:textSize="14sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/risultatoTempi"
